@article{Fu2019,
author = {B.-B. Fu  and C.-J. Yi  and T.-T. Zhang  and M. Caputo  and J.-Z. Ma  and X. Gao  and B. Q. Lv  and L.-Y. Kong  and Y.-B. Huang  and P. Richard  and M. Shi  and V. N. Strocov  and C. Fang  and H.-M. Weng  and Y.-G. Shi  and T. Qian  and H. Ding },
title = {Dirac nodal surfaces and nodal lines in ZrSiS},
journal = {Science Advances},
volume = {5},
number = {5},
pages = {eaau6459},
year = {2019},
doi = {10.1126/sciadv.aau6459},
URL = {https://www.science.org/doi/abs/10.1126/sciadv.aau6459},
eprint = {https://www.science.org/doi/pdf/10.1126/sciadv.aau6459},
abstract = {Photoemission demonstrates that the Dirac-like band crossings form 1D nodal lines and 2D nodal surfaces in the bulk of ZrSiS. Topological semimetals are characterized by symmetry-protected band crossings, which can be preserved in different dimensions in momentum space, forming zero-dimensional nodal points, one-dimensional nodal lines, or even two-dimensional nodal surfaces. Materials harboring nodal points and nodal lines have been experimentally verified, whereas experimental evidence of nodal surfaces is still lacking. Here, using angle-resolved photoemission spectroscopy (ARPES), we reveal the coexistence of Dirac nodal surfaces and nodal lines in the bulk electronic structures of ZrSiS. As compared with previous ARPES studies on ZrSiS, we obtained pure bulk states, which enable us to extract unambiguously intrinsic information of the bulk nodal surfaces and nodal lines. Our results show that the nodal lines are the only feature near the Fermi level and constitute the whole Fermi surfaces. We not only prove that the low-energy quasiparticles in ZrSiS are contributed entirely by Dirac fermions but also experimentally realize the nodal surface in topological semimetals.}}

