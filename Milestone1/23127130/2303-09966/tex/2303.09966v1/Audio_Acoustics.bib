file = {:Users/JohannesMArend/Documents/Literatur/Audio{\&}Acoustics/Papers/Spiousas2017{\_}Sound Spectrum Influences Auditory Distance Perception of Sound Sources Located in a Room Environment.pdf:pdf},
journal = {Frontiers in Psychology},
keywords = {Auditory perception,Distance perception,Psychoacoustics,Reverberation,Spectrum},
