file = {:Users/JohannesMArend/Documents/Literatur/Audio{\&}Acoustics/Papers/Flanagin2017{\_}Human Exploration of Enclosed Spaces through Echolocation.pdf:pdf},
journal = {The Journal of Neuroscience},
keywords = {brain activity during echolocation,during passive listening,echolocation,fmri,generated sounds,humans perform better when,passive listening is the,predominant method for examining,self-,sensory-motor coupling,significance statement,spatial processing,the auditory analysis of,they actively vocalize than,virtual acoustic space,we show that sighted},
number = {6},
