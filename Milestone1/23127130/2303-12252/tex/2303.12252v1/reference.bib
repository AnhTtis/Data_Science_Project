@article {Hatada20,
	author = {Hatada, Hiroki and Nakamura, Masao and Sotome, Masato and Kaneko, Yoshio and Ogawa, Naoki and Morimoto, Takahiro and Tokura, Yoshinori and Kawasaki, Masashi},
	title = {Defect tolerant zero-bias topological photocurrent in a ferroelectric semiconductor},
	elocation-id = {202007002},
volume={117},
pages={20411},
	year = {2020},
	doi = {10.1073/pnas.2007002117},
	publisher = {National Academy of Sciences},
	abstract = {Shift current is a photocurrent emerging in materials lacking inversion symmetry, without any external bias, originating from the change in the geometric Berry connection of electron bands upon optical transition. We experimentally demonstrate for a ferroelectric semiconductor that the shift current is insensitive to the defect density varying by several orders of magnitude. We also reveal by action spectroscopy that the shift current is scarcely disturbed by the surface defects. The robustness of shift current against both interior and surface defects demonstrated in this study is a hallmark of the topological origin of the shift current.Lattice defect is a major cause of energy dissipation in conventional electric current due to the drift and diffusion motions of electrons. Different nature of current emerges when noncentrosymmetric materials are excited by light. This current, called the shift current, originates from the change in the Berry connection of electrons{\textquoteright} wave functions during the interband optical transition. Here, we demonstrate the defect tolerance of shift current using single crystals of ferroelectric semiconductor antimony sulfoiodide (SbSI). Although the dark conductance spreads over several orders of magnitude in each crystal due to the difference in the density of defect levels, the observed shift current converges to an identical value. We also reveal that the shift current is scarcely disturbed by the surface defects while they drastically suppress the conventional photocurrent. The defect tolerance is a manifestation of the topological nature of shift current, which will be a crucial advantage in optoelectronic applications.All data, materials, and experimental procedures that support the findings of this study are shown in Materials and Methods and SI Appendix.},
	issn = {0027-8424},
	URL = {https://www.pnas.org/content/early/2020/08/05/2007002117},
	journal = {Proceedings of the National Academy of Sciences}
}

