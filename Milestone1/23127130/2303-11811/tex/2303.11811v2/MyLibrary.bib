@misc{schwarzmeierParticleresolvedSimulationAntidunes2023,
  title = {Particle-Resolved Simulation of Antidunes in Free-Surface Flows},
  author = {Schwarzmeier, Christoph and Rettinger, Christoph and Kemmler, Samuel and Plewinski, Jonas and {N{\'u}{\~n}ez-Gonz{\'a}lez}, Francisco and K{\"o}stler, Harald and R{\"u}de, Ulrich and Vowinckel, Bernhard},
