@article{cosmic-flux,
author = {Gardner, Chester S. and Liu, Alan Z. and Marsh, D. R. and Feng, Wuhu and Plane, J. M. C.},
title = {Inferring the global cosmic dust influx to the Earth's atmosphere from lidar observations of the vertical flux of mesospheric Na},
journal = {Journal of Geophysical Research: Space Physics},
