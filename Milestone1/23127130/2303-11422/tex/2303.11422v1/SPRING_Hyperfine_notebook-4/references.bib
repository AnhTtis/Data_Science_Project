@Article{Merkulov02,
  Title                    = {Electron spin relaxation by nuclei in semiconductor quantum dots},
  Author                   = {Merkulov, I. A. and Efros, A. L. and Rosen, M.},
  Eprint                   = {cond-mat/0202271},
  Journal                  = prb,
  Year                     = {2002},
  Pages                    = {205309},
  Volume                   = {65},
  Abstract                 = {We have studied theoretically electron spin relaxation in semiconductor quantum dots via interaction with nuclear spins. The relaxation is shown to be determined by three processes: (i) the precession of the electron spin in the hyperfine field of the frozen fluctuation of the nuclear spins; (ii) the precession of the nuclear spins in the hyperfine field of the electron; and (iii) the precession of the nuclear spin in the dipole field of its nuclear neighbors. In external magnetic fields the relaxation of electron spins directed along the magnetic field is suppressed. Electron spins directed transverse to the magnetic field relax completely in a time on the order of the precession period of its spin in the field of the frozen fluctuation of the nuclear spins. Comparison with experiment shows that the hyperfine interaction with nuclei may be the dominant mechanism of electron spin relaxation in quantum dots.},
  Doi                      = {10.1103/PhysRevB.65.205309},
  Keywords                 = {decoherence, electron spin, quantum dot, hyperfine interaction},
  Location                 = {QD(nuclear spin)},
  Timestamp                = {2003.01.01}
}

@Article{Erlingsson04,
  Title                    = {Evolution of a localized electron spin in a nuclear spin environment},
  Author                   = {Sigurdur I. Erlingsson and Yuli V. Nazarov},
  Eprint                   = {cond-mat/0405318},
  Journal                  = prb,
  Year                     = {2004},
  Pages                    = {205327},
  Volume                   = {70},
  Abstract                 = {Motivated by recent interest in the role of the hyperfine interaction in quantum dots, we study the dynamics of a localized electron spin coupled to many nuclei. An important feature of the model is that the coupling to an individual nuclear spin depends on its position in the quantum dot. We introduce a semiclassical description of the system valid in the limit of a large number of nuclei and analyze the resulting classical dynamics. Contrary to a natural assumption of chaoticity of such dynamics, the correlation functions of the electron spin with an arbitrary initial condition show no decay in time. Rather, they exhibit complicated undamped oscillations. This may be attributed to the fact that the system has many integrals of motion and is close to an integrable one. The correlation functions averaged over initial conditions do exhibit a slow decay ($\sim1/ln(t)$ at $t\to\infty$).},
  Doi                      = {10.1103/PhysRevB.70.205327},
Location                 = {QD(nuclear spin)},
  Timestamp                = {2004.06.01}
}


