@Article{Friedrich2020,
  Title                    = {Magnetism of Topological Boundary States Induced by Boron Substitution in Graphene Nanoribbons},
  Author                   = {Friedrich, Niklas and Brandimarte, Pedro and Li, Jingcheng and Saito, Shohei and Yamaguchi, Shigehiro and Pozo, Iago and Peña, Diego and Frederiksen, Thomas and Garcia-Lekue, Aran and S\'anchez-Portal, Daniel and Pascual, Jos\'e Ignacio},
