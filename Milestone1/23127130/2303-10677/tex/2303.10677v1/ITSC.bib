@article{sun_object_2022,
  title = {Object {{Detection Based}} on {{Roadside LiDAR}} for {{Cooperative Driving Automation}}: {{A Review}}},
  author = {Sun, Pengpeng and Sun, Chenghao and Wang, Runmin and Zhao, Xiangmo},
  year = {2022},
  journal = {Sensors},
