@article{liu_fedvision_2020,
  title = {{{FedVision}}: {{An}} Online Visual Object Detection Platform Powered by Federated Learning},
  author = {Liu, Yang and Huang, Anbu and Luo, Yun and Huang, He and Liu, Youzhi and Chen, Yuanyuan and Feng, Lican and Chen, Tianjian and Yu, Han and Yang, Qiang},
