	journal = {arXiv:2111.01920 [astro-ph]},
	author = {Paliwal, A. and Artis, E. and Cui, W. and De Petris, M. and Désert, F.-X. and Ferragamo, A. and Gianfagna, G. and Kéruzoré, F. and Macías-Pérez, J.-F. and Mayet, F. and Muñoz-Echeverría, M. and Perotto, L. and Rasia, E. and Ruppin, F. and Yepes, G.},
