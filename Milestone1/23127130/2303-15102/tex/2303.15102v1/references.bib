@article{sarkar_deprojection_2021,
	title = {Deprojection of {X}-ray data in galaxy clusters: confronting simulations with observations},
	shorttitle = {Deprojection of {X}-ray data in galaxy clusters},
	url = {http://arxiv.org/abs/2110.12447},
	abstract = {Numerical simulations with varying realism indicate an emergent principle -- multiphase condensation and large cavity power occur when the ratio of the cooling time to the free-fall time (\$t\_\{{\textbackslash}rm cool\}/t\_\{{\textbackslash}rm ff\}\$) falls below a threshold value close to 10. Observations indeed show cool-core signatures when this ratio falls below 20-30, but the prevalence of cores with {\textbackslash}tctf{\textasciitilde}ratio below 10 is rare as compared to simulations. In X-ray observations, we obtain projected spectra from which we have to infer radial gas density and temperature profiles. Using idealized models of X-ray cavities and multiphase gas in the core and 3-D hydro jet-ICM simulations, we quantify the biases introduced by deprojection based on the assumption of spherical symmetry in determining \$t\_\{{\textbackslash}rm cool\}/t\_\{{\textbackslash}rm ff\}\$. We show that while the used methods are able to recover the \$t\_\{{\textbackslash}rm cool\}/t\_\{{\textbackslash}rm ff\}\$ ratio for relaxed clusters, they have an uncertainty of a factor of \$2-3\$ in systems containing large cavities (\${\textbackslash}gtrsim 20\$ kpc). We also show that the mass estimates from these methods, in absence of X-ray spectra close to the virial radius, suffer from a degeneracy between the virial mass (\$M\_\{200\}\$) and the concentration parameter (\$c\$) in the form of \$M\_\{200\}{\textbackslash}: c{\textasciicircum}2 {\textbackslash}approx\$ constant. Additionally, lack of soft-X-ray (\${\textbackslash}lesssim 0.5\$ keV) coverage and poor spatial resolution make us overestimate min(\$t\_\{{\textbackslash}rm cool\}/t\_\{{\textbackslash}rm ff\}\$) by a factor of few in clusters with min(\$t\_\{{\textbackslash}rm cool\}/t\_\{{\textbackslash}rm ff\}\$) \${\textbackslash}lesssim 5\$. This bias can largely explain the lack of cool-core clusters with min(\$t\_\{{\textbackslash}rm cool\}/t\_\{{\textbackslash}rm ff\}\$) \${\textbackslash}lesssim 5\$.},
	urldate = {2021-10-26},
	journal = {arXiv:2110.12447 [astro-ph]},
	author = {Sarkar, Kartick C. and Dey, Arjun and Sharma, Prateek},
	month = oct,
	year = {2021},
	note = {arXiv: 2110.12447},
	keywords = {Astrophysics - Astrophysics of Galaxies, Astrophysics - Cosmology and Nongalactic Astrophysics},
}

@article{biffi_velocity_2022,
