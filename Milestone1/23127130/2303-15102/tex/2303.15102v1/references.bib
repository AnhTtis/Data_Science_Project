	keywords = {Astrophysics - Astrophysics of Galaxies, Astrophysics - Cosmology and Nongalactic Astrophysics},
}

@article{lyskova_close-up_2019,
	title = {Close-up view of an ongoing merger between the {NGC} 4839 group and the {Coma} cluster – a post-merger scenario},
