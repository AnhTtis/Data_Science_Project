	keywords = {Astrophysics - Cosmology and Nongalactic Astrophysics, galaxies: clusters: general, galaxies: clusters: individual: MACS J1206.2-0847, galaxies: clusters: intracluster medium, gravitational lensing: weak},
	pages = {3801--3826},
}

@article{bartalucci_chex-mate_nodate,
	title = {{CHEX}-{MATE}: constraining the origin of the scatter in galaxy cluster radial {X}-ray surface brightness proﬁles},
	abstract = {We investigate the statistical properties and the origin of the scatter within the spatially resolved surface brightness proﬁles of the CHEX–MATE sample, formed by 118 galaxy clusters selected via the SZ eﬀect. These objects have been drawn from the Planck SZ catalogue and cover a wide range of mass, M500 = [2 − 15] × 1014M , and redshift, z=[0.05,0.6]. We derived the surface brightness and emission measure proﬁles and determined the statistical properties of the full sample and sub-samples according to their morphology, mass and redshift. We found that there is a critical scale, R∼ 0.4R500, below which diﬀerences between morphologically relaxed and disturbed object proﬁles are of the order of ∼ 200\% decreasing to ∼ 20\% at higher scales. There are no signiﬁcant diﬀerence between mass- and redshift-selected subsamples once proper scaling is applied.},
	language = {en},
	author = {Bartalucci, I and Molendi, S and Rasia, E and Pratt, G W and Arnaud, M and Rossetti, M and Gastaldello, F and Eckert, D and Borgani, S and Bourdin, H and Campitiello, M G and Du, R T and Gavazzi, R and Ghizzardi, S and Grandi, S De and Iqbal, A and Kay, S T and Lovisari, L and Mazzotta, P and Maughan, B J and Petris, De and Pointecouteau, E and Riva, G and Sereno, M},
