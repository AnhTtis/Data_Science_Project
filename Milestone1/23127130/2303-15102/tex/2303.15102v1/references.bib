	doi = {10.48550/arXiv.2211.03082},
	abstract = {In the self-similar scenario for galaxy cluster formation and evolution, the thermodynamic properties of the X-ray emitting plasma can be predicted in their dependencies on the halo mass and redshift only. However, several departures from this simple self-similar scenario have been observed. We show how our semi-analytic model \$i(cm)z\$, which modifies the self-similar predictions through two temperature-dependent quantities, the gas mass fraction \$f\_g=f\_0 T{\textasciicircum}\{f\_1\} E\_z{\textasciicircum}\{f\_z\}\$ and the temperature variation \$f\_T=t\_0 T{\textasciicircum}\{t\_1\} E\_z{\textasciicircum}\{t\_z\}\$, can be calibrated to incorporate the mass and redshift dependencies. We used a published set of 17 scaling relations to constrain the parameters of the model. We were subsequently able to make predictions as to the slope of any observed scaling relation within a few percent of the central value and about one \${\textbackslash}sigma\$ of the nominal error. Contextually, the evolution of these scaling laws was also determined, with predictions within \$1.5 {\textbackslash}sigma\$ and within 10 percent of the observational constraints. Relying on this calibration, we have also evaluated the consistency of the predictions on the radial profiles with some observational datasets. For a sample of high-quality data (X-COP), we were able to constrain a further parameter of the model, the hydrostatic bias \$b\$. By calibrating the model, we have determined that (i) the slopes of the temperature dependence are \$f\_1=0.403 ({\textbackslash}pm0.009)\$ and \$t\_1=0.144 ({\textbackslash}pm0.017)\$; and that (ii) the dependence upon \$E\_z\$ are constrained to be \$f\_z=-0.004 ({\textbackslash}pm 0.023)\$ and \$t\_z=0.349 ({\textbackslash}pm 0.059)\$. These values permit one to estimate directly how the normalizations of a given quantity \$Q\_\{{\textbackslash}Delta\}\$ changes as a function of the mass (or temperature) and redshift halo in the form \$Q\_\{{\textbackslash}Delta\} {\textbackslash}sim M{\textasciicircum}\{a\_M\} E\_z{\textasciicircum}\{a\_z\} {\textbackslash}sim T{\textasciicircum}\{a\_T\} E\_z{\textasciicircum}\{a\_\{Tz\}\}\$, in very good agreement with the current observational constraints.},
	urldate = {2022-11-28},
	publisher = {arXiv},
	author = {Ettori, S. and Lovisari, L. and Eckert, D.},
	month = nov,
	year = {2022},
	note = {arXiv:2211.03082 [astro-ph]},
	keywords = {Astrophysics - Cosmology and Nongalactic Astrophysics},
}

