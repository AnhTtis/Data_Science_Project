	author = {Bégin, T. and Hlavacek-Larrondo, J. and Rhea, C. L. and Gendron-Marsolais, M. and McNamara, B. and van Weeren, R. J. and Richard-Laferrière, A. and Guité, L. and Prasow-Émond, M. and Haggard, D.},
