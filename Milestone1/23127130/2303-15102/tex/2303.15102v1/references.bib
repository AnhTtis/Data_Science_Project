	year = {2022},
	note = {arXiv:2210.00796 [astro-ph, physics:hep-ph]},
	keywords = {Astrophysics - Cosmology and Nongalactic Astrophysics, High Energy Physics - Phenomenology},
}

@misc{liu_x-ray_2022,
	title = {X-ray analysis of {JWST}'s first galaxy cluster lens {SMACS} {J0723}.3-7327},
