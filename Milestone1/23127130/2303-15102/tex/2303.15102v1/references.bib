	author = {Liu, A. and Bulbul, E. and Ramos-Ceja, M. E. and Sanders, J. S. and Ghirardini, V. and Bahar, Y. E. and Yeung, M. and Gatuzz, E. and Freyberg, M. and Garrel, C. and Zhang, X. and Merloni, A. and Nandra, K.},
	month = oct,
