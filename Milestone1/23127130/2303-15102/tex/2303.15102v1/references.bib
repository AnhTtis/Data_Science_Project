@article{stewart_new_2021,
	title = {A new method for measuring the {3D} turbulent velocity dispersion of molecular clouds},
	url = {http://arxiv.org/abs/2111.07236},
	abstract = {The structure and star formation activity of a molecular cloud are fundamentally linked to its internal turbulence. However, accurately measuring the turbulent velocity dispersion is challenging due to projection effects and observational limitations, such as telescope resolution, particularly for clouds that include non-turbulent motions, such as large-scale rotation. Here we develop a new method to recover the three-dimensional (3D) turbulent velocity dispersion (\$\{{\textbackslash}sigma\}\_\{v,3D\}\$) from position-position-velocity (PPV) data. We simulate a rotating, turbulent, collapsing molecular cloud and compare its intrinsic \$\{{\textbackslash}sigma\}\_\{v,3D\}\$ with three different measures of the velocity dispersion accessible in PPV space: 1) the spatial mean of the 2nd-moment map, \$\{{\textbackslash}sigma\}\_i\$, 2) the standard deviation of the gradient/rotation-corrected 1st-moment map, \$\{{\textbackslash}sigma\}\_\{(c-grad)\}\$, and 3) a combination of 1) and 2), called the 'gradient-corrected parent velocity dispersion', \$\{{\textbackslash}sigma\}\_\{(p-grad)\}=(\{{\textbackslash}sigma\}{\textasciicircum}2\_i+\{{\textbackslash}sigma\}{\textasciicircum}2\_\{(c-grad)\}){\textasciicircum}\{1/2\}\$. We show that the gradient correction is crucial in order to recover purely turbulent motions of the cloud, independent of the orientation of the cloud with respect to the line of sight (LOS). We find that with a suitable correction factor and appropriate filters applied to the moment maps, all three statistics can be used to recover \$\{{\textbackslash}sigma\}\_\{v,3D\}\$, with method 3 being the most robust and reliable. We determine the correction factor as a function of the telescope beam size for different levels of cloud rotation, and find that for a beam FWHM \$f\$ and cloud radius \$R\$, the 3D turbulent velocity dispersion can best be recovered from the gradient-corrected parent velocity dispersion via \$\{{\textbackslash}sigma\}\_\{v,3D\}=[(-0.29{\textbackslash}pm0.26)f/R+1.93{\textbackslash}pm0.15]\{{\textbackslash}sigma\}\_\{(p-grad)\}\$ for \$f/R{\textless}1\$, independent of the level of cloud rotation or LOS orientation.},
	urldate = {2021-11-16},
	journal = {arXiv:2111.07236 [astro-ph]},
	author = {Stewart, Madeleine and Federrath, Christoph},
	month = nov,
	year = {2021},
	note = {arXiv: 2111.07236},
	keywords = {Astrophysics - Astrophysics of Galaxies, Astrophysics - Instrumentation and Methods for Astrophysics, Astrophysics - Solar and Stellar Astrophysics},
}

@article{sanders_contour_2006,
	title = {Contour binning: a new technique for spatially resolved {X}-ray spectroscopy applied to {Cassiopeia} {A}},
