@misc{zhuravleva_indirect_2022,
	title = {Indirect {Measurements} of {Gas} {Velocities} in {Galaxy} {Clusters}: {Effects} of {Ellipticity} and {Cluster} {Dynamic} {State}},
	shorttitle = {Indirect {Measurements} of {Gas} {Velocities} in {Galaxy} {Clusters}},
	url = {http://arxiv.org/abs/2210.11544},
	abstract = {While awaiting direct velocity measurement of gas motions in the hot intracluster medium, we rely on indirect probes, including gas perturbations in galaxy clusters. Using a sample of \${\textbackslash}sim 80\$ clusters in different dynamic states from Omega500 cosmological simulations, we examine scaling relations between the fluctuation amplitudes of gas density, \${\textbackslash}delta{\textbackslash}rho/{\textbackslash}rho\$, pressure, \${\textbackslash}delta P/P\$, X-ray surface brightness, Sunyaev-Zeldovich (SZ) y-parameter, and the characteristic Mach number of gas motions, \$M\_\{{\textbackslash}rm 1d\}\$. In relaxed clusters, accounting for halo ellipticities reduces \${\textbackslash}delta{\textbackslash}rho/{\textbackslash}rho\$ or \${\textbackslash}delta P/P\$ by a factor of up to 2 within \$r\_\{500c\}\$. We confirm a strong linear correlation between \${\textbackslash}delta{\textbackslash}rho/{\textbackslash}rho\$ (or \${\textbackslash}delta P/P\$) and \$M\_\{{\textbackslash}rm 1d\}\$ in relaxed clusters, with the proportionality coefficient \${\textbackslash}eta {\textbackslash}approx 1\$. For unrelaxed clusters, the correlation is less strong and has a larger \${\textbackslash}eta{\textbackslash}approx 1.3{\textbackslash}pm 0.5\$ (\$1.5{\textbackslash}pm0.5\$) for \${\textbackslash}delta{\textbackslash}rho/{\textbackslash}rho\$ (\${\textbackslash}delta P/P\$). Examination of the power-law scaling of \$M\_\{{\textbackslash}rm 1d\}\$ with \${\textbackslash}delta{\textbackslash}rho/{\textbackslash}rho\$ shows that it is almost linear for relaxed clusters, while for the unrelaxed ones, it is closer to \${\textbackslash}delta{\textbackslash}rho/{\textbackslash}rho{\textbackslash}propto M\_\{{\textbackslash}rm 1d\}{\textasciicircum}2\$, supporting an increasing role of non-linear terms and compressive modes. In agreement with previous studies, we observe a strong correlation of \$M\_\{{\textbackslash}rm 1d\}\$ with radius. Correcting for these correlations leaves a residual scatter in \$M\_\{{\textbackslash}rm 1d\}\$ of \${\textbackslash}sim 4 (7)\$ per cent for relaxed (perturbed) clusters. Hydrostatic mass bias correlates with \$M\_\{{\textbackslash}rm 1d\}\$ as strongly as with \${\textbackslash}delta{\textbackslash}rho/{\textbackslash}rho\$ in relaxed clusters. The residual scatters after correcting for derived trends is \${\textbackslash}sim 6-7\$ per cent. These predictions can be verified with existing X-ray and SZ observations of galaxy clusters combined with forthcoming velocity measurements with X-ray microcalorimeters.},
	urldate = {2022-10-24},
	publisher = {arXiv},
	author = {Zhuravleva, Irina and Chen, Mandy C. and Churazov, Eugene and Schekochihin, Alexander A. and Zhang, Congyao and Nagai, Daisuke},
	month = oct,
