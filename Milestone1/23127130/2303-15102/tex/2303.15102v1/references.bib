@article{livingstone_barker_2020,
	title = {The {Barker} proposal: combining robustness and efficiency in gradient-based {MCMC}},
	shorttitle = {The {Barker} proposal},
	url = {http://arxiv.org/abs/1908.11812},
	abstract = {There is a tension between robustness and efficiency when designing Markov chain Monte Carlo (MCMC) sampling algorithms. Here we focus on robustness with respect to tuning parameters, showing that more sophisticated algorithms tend to be more sensitive to the choice of step-size parameter and less robust to heterogeneity of the distribution of interest. We characterise this phenomenon by studying the behaviour of spectral gaps as an increasingly poor step-size is chosen for the algorithm. Motivated by these considerations, we propose a novel and simple gradient-based MCMC algorithm, inspired by the classical Barker accept-reject rule, with improved robustness properties. Extensive theoretical results, dealing with robustness to tuning, geometric ergodicity and scaling with dimension, suggest that the novel scheme combines the robustness of simple schemes with the efficiency of gradient-based ones. We show numerically that this type of robustness is particularly beneficial in the context of adaptive MCMC, giving examples where our proposed scheme significantly outperforms state-of-the-art alternatives.},
	urldate = {2022-02-03},
	journal = {arXiv:1908.11812 [stat]},
	author = {Livingstone, Samuel and Zanella, Giacomo},
	month = may,
	year = {2020},
	note = {arXiv: 1908.11812},
	keywords = {Statistics - Computation, Statistics - Methodology},
}

@article{riechers_microwave_2022,
	title = {Microwave {Background} {Temperature} at a {Redshift} of 6.34 from {H2O} {Absorption}},
	url = {https://arxiv.org/abs/2202.00693v1},
	doi = {10.1038/s41586-021-04294-5},
	abstract = {Distortions of the observed cosmic microwave background imprinted by the Sunyaev-Zel'dovich effect toward massive galaxy clusters due to inverse Compton scattering of microwave photons by high-energy electrons provide a direct measurement of the microwave background temperature at redshifts from 0 to 1. Some additional background temperature estimates exist at redshifts from 1.8 to 3.3 based on molecular and atomic line excitation temperatures in quasar absorption line systems, but are model dependent. To date, no deviations from the expected (1+z) scaling behavior of the microwave background temperature have been seen, but the measurements have not extended deeply into the matter-dominated era of the universe at redshifts z{\textgreater}3.3. Here we report the detection of sub-millimeter line absorption from the water molecule against the cosmic microwave background at z=6.34 in a massive starburst galaxy, corresponding to a lookback time of 12.8 Gyr. Radiative pumping of the upper level of the ground-state ortho-H2O(110-101) line due to starburst activity in the dusty galaxy HFLS3 results in a cooling to below the redshifted microwave background temperature, after the transition is initially excited by the microwave background. The strength of this effect implies a microwave background temperature of 16.4-30.2 K (1-sigma range) at z=6.34, which is consistent with a background temperature increase with redshift as expected from the standard CDM cosmology.},
	language = {en},
	urldate = {2022-02-03},
	author = {Riechers, Dominik A. and Weiss, Axel and Walter, Fabian and Carilli, Christopher L. and Cox, Pierre and Decarli, Roberto and Neri, Roberto},
	month = feb,
	year = {2022},
}

@article{xu_statistical_2022,
	title = {The statistical theory of self-gravitating collisionless dark matter flow and the correlation, structure, and dispersion functions for velocity, density, and potential fields},
	url = {https://arxiv.org/abs/2202.00910v1},
	abstract = {N-body simulation is an invaluable tool to understand cosmic velocity field. However, simulation samples velocity only at particle locations that leads to information loss when projecting velocity fields onto structured grid. Here we extract two-point statistics without field projection. These statistics, i.e. correlation/structure/dispersion functions in real space and spectrum functions in Fourier space, are modeled on both small and large scales. Kinematic relations between statistical measures are fully developed for incompressible, constant divergence, and irrotational flow. The nature of flow can be identified by these relations. Much more complex than incompressible flow, peculiar velocity of dark matter flow is of constant divergence on small scale and irrotational on large scale. Incompressible and constant divergence flow share same kinematic relations for even order correlations. The limiting correlation of velocity \${\textbackslash}rho\_L=1/2\$ on the smallest scale (\$r=0\$) is a unique feature of collisionless flow (\${\textbackslash}rho\_L=1\$ for incompressible flow). Assuming gravity is the only interaction and no radiation produced, this feature leads to an increase in particle mass converted from kinetic energy upon "annihilation". On large scale, transverse velocity correlation has an exponential form with a comoving scale \$r\_2\$=21.3Mpc/h that maybe related to the size of sound horizon. All other correlation/structure/dispersion/spectrum functions for velocity/density/potential are derived analytically from kinematic relations for irrotational flow. On small scale, longitudinal structure function follows one-fourth law of \$S{\textasciicircum}l\_2{\textbackslash}propto r{\textasciicircum}\{1/4\}\$. All other statistical measures are obtained from kinematic relations for constant divergence flow. Vorticity is negatively correlated for \$r\$ between 1 and 7Mpc/h. Divergence is negatively correlated for \$r\${\textgreater}30Mpc/h that leads to negative density correlation.},
	language = {en},
	urldate = {2022-02-03},
	author = {Xu, Zhijie},
	month = feb,
	year = {2022},
}

@article{bogdan_detection_2022,
	title = {Detection of a {Superluminous} {Spiral} {Galaxy} in the {Heart} of a {Massive} {Galaxy} {Cluster}},
	url = {http://arxiv.org/abs/2201.12365},
	abstract = {It is well established that brightest cluster galaxies (BCGs), residing in the center of galaxy clusters, are typically massive and quenched galaxies with cD or elliptical morphology. An optical survey suggested that an exotic galaxy population, superluminous spiral and lenticular galaxies could be the BCGs of some galaxy clusters. Because the cluster membership and the centroid of a cluster cannot be accurately determined based solely on optical data, we followed up a sample of superluminous disk galaxies and their environment using XMM-Newton X-ray observations. Specifically, we explored seven superluminous spiral and lenticular galaxies that are candidate BCGs. We detected massive galaxy clusters around five superluminous disk galaxies and established that one superluminous spiral, 2MASX J16273931+3002239, is the central BCG of a galaxy cluster. The temperature and total mass of the cluster are \$kT\_\{{\textbackslash}rm 500\}=3.55{\textasciicircum}\{+0.18\}\_\{-0.20\}\$ keV and \$M\_\{{\textbackslash}rm 500\} = (2.39 {\textbackslash}pm 0.19) {\textbackslash}times 10{\textasciicircum}\{14\} {\textbackslash} {\textbackslash}rm\{M\_\{{\textbackslash}odot\}\} \$. We identified the central galaxies of the four clusters that do not host the superluminous disk galaxy at their cores and established that the centrals are massive elliptical galaxies. However, for two of the clusters, the offset superluminous spirals are brighter than the central galaxies, implying that the superluminous disk galaxies are the brightest cluster galaxies. Our results demonstrate that superluminous disk galaxies are rarely the central systems of galaxy clusters. This is likely because galactic disks are destroyed by major mergers, which are more frequent in high-density environments. We speculate that the disks of superluminous disk galaxies in cluster cores may have been re-formed due to mergers with a gas-rich satellite.},
	urldate = {2022-02-01},
	journal = {arXiv:2201.12365 [astro-ph]},
	author = {Bogdan, Akos and Lovisari, Lorenzo and Ogle, Patrick and Kovacs, Orsolya E. and Jarrett, Thomas and Jones, Christine and Forman, William R. and Lanz, Lauranne},
	month = jan,
	year = {2022},
	note = {arXiv: 2201.12365},
	keywords = {Astrophysics - Astrophysics of Galaxies, Astrophysics - High Energy Astrophysical Phenomena},
}

@article{chen_thermal_2022,
	title = {Thermal energy census with the {Sunyaev}-{Zel}'dovich effect of {DESI} galaxy clusters/groups and its implication on the weak lensing power spectrum},
	url = {http://arxiv.org/abs/2201.12591},
	abstract = {We carry out a thermal energy census of hot baryons at \$z {\textless} 1\$, by cross-correlating the Planck MILCA y-map with over 40 DESI galaxy cluster/group subsamples constructed from the Yang et. al (2021) catalog. In our investigation, we select 0.8 million clusters/groups with richness \${\textbackslash}geq 5\$ and estimated halo mass \${\textbackslash}geq 10{\textasciicircum}\{13\} M\_{\textbackslash}odot/h\$. The detection of the thermal Sunyaev-Zel'dovich (tSZ) effect is significant in the investigated clusters/groups. (1) The total measurement S/N of the one-halo term is 65. We constrain the \$Y-M\$ relation over the halo mass range of \$10{\textasciicircum}\{13\}-10{\textasciicircum}\{15\} M\_{\textbackslash}odot/h\$. We find \$Y{\textbackslash}propto M{\textasciicircum}\{{\textbackslash}alpha\}\$ with \${\textbackslash}alpha= 1.8\$ at \$z=0.14\$ and \${\textbackslash}alpha=2.1\$ at \$z=0.75\$. The total thermal energy of gas bound to clusters/groups increases from \$0.11 {\textbackslash}rm meV/cm{\textasciicircum}3\$ at \$z=0.14\$ to \$0.23 {\textbackslash}rm meV/cm{\textasciicircum}3\$ at \$z=0.75\$. (2) The two-halo term measurement constrains the bias-weighted electron pressure \${\textbackslash}langle b\_yP\_e {\textbackslash}rangle\$. We find that \${\textbackslash}langle b\_yP\_e {\textbackslash}rangle\$ (in unit of \${\textbackslash}rm meV/cm{\textasciicircum}3\$) increases from \$0.25{\textbackslash}pm 0.03\$ at \$z=0.14\$ to \$0.55{\textbackslash}pm 0.04\$ at \$z=0.75\$. These results lead to several implications. (i) The hot gas fraction \$f\_\{{\textbackslash}rm gas\}\$ in clusters/groups monotonically increase with halo mass, where \$f\_\{{\textbackslash}rm gas\}\$ of a \$10{\textasciicircum}\{14\} M\_{\textbackslash}odot/h\$ halo is \${\textbackslash}sim 50{\textbackslash}\%\$ (\$20{\textbackslash}\%\$) of the cosmic mean at \$z=0.14{\textbackslash} (0.75)\$. (ii) By comparing the 1h- and 2h-terms, we constrain the thermal energy of unbound gas. (iii) The above results lead to a suppression of matter and weak lensing power spectrum. At \$l=10{\textasciicircum}3 {\textbackslash} (10{\textasciicircum}4)\$, the suppression is \${\textbackslash}sim 7{\textbackslash}\%{\textbackslash} (17{\textbackslash}\%)\$ for source galaxies at \$z\_s=1\$. These implications are potentially important for gastrophysics and cosmology, although they suffer from uncertainties in measurements (Planck resolution, cluster mass/redshift determination, etc) and gas modeling to be further investigated.},
	urldate = {2022-02-01},
