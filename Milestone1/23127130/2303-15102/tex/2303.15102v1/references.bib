@article{wadekar_augmenting_2022,
	title = {Augmenting astrophysical scaling relations with machine learning : application to reducing the {SZ} flux-mass scatter},
	shorttitle = {Augmenting astrophysical scaling relations with machine learning},
	url = {http://arxiv.org/abs/2201.01305},
	abstract = {Complex systems (stars, supernovae, galaxies, and clusters) often exhibit low scatter relations between observable properties (e.g., luminosity, velocity dispersion, oscillation period, temperature). These scaling relations can illuminate the underlying physics and can provide observational tools for estimating masses and distances. Machine learning can provide a systematic way to search for new scaling relations (or for simple extensions to existing relations) in abstract high-dimensional parameter spaces. We use a machine learning tool called symbolic regression (SR), which models the patterns in a given dataset in the form of analytic equations. We focus on the Sunyaev-Zeldovich flux\$-\$cluster mass relation (\$Y\_{\textbackslash}mathrm\{SZ\}-M\$), the scatter in which affects inference of cosmological parameters from cluster abundance data. Using SR on the data from the IllustrisTNG hydrodynamical simulation, we find a new proxy for cluster mass which combines \$Y\_{\textbackslash}mathrm\{SZ\}\$ and concentration of ionized gas (\$c\_{\textbackslash}mathrm\{gas\}\$): \$M {\textbackslash}propto Y\_{\textbackslash}mathrm\{conc\}{\textasciicircum}\{3/5\} {\textbackslash}equiv Y\_{\textbackslash}mathrm\{SZ\}{\textasciicircum}\{3/5\} (1-A{\textbackslash}, c\_{\textbackslash}mathrm\{gas\})\$. \$Y\_{\textbackslash}mathrm\{conc\}\$ reduces the scatter in the predicted \$M\$ by \${\textbackslash}sim 20-30\$\% for large clusters (\$M{\textbackslash}gtrsim 10{\textasciicircum}\{14\}{\textbackslash}, h{\textasciicircum}\{-1\} {\textbackslash}, M\_{\textbackslash}odot\$) at both high and low redshifts, as compared to using just \$Y\_{\textbackslash}mathrm\{SZ\}\$. We show that the dependence on \$c\_{\textbackslash}mathrm\{gas\}\$ is linked to cores of clusters exhibiting larger scatter than their outskirts. Finally, we test \$Y\_{\textbackslash}mathrm\{conc\}\$ on clusters from simulations of the CAMELS project and show that \$Y\_{\textbackslash}mathrm\{conc\}\$ is robust against variations in cosmology, astrophysics, subgrid physics, and cosmic variance. Our results and methodology can be useful for accurate multiwavelength cluster mass estimation from current and upcoming CMB and X-ray surveys like ACT, SO, SPT, eROSITA and CMB-S4.},
	urldate = {2022-01-14},
	journal = {arXiv:2201.01305 [astro-ph]},
	author = {Wadekar, Digvijay and Thiele, Leander and Villaescusa-Navarro, Francisco and Hill, J. Colin and Spergel, David N. and Cranmer, Miles and Battaglia, Nicholas and Anglés-Alcázar, Daniel and Hernquist, Lars and Ho, Shirley},
	month = jan,
	year = {2022},
	note = {arXiv: 2201.01305},
	keywords = {Astrophysics - Astrophysics of Galaxies, Astrophysics - Cosmology and Nongalactic Astrophysics, Astrophysics - Instrumentation and Methods for Astrophysics, Computer Science - Artificial Intelligence, Computer Science - Machine Learning},
}

@article{gouin_gas_2022,
	title = {Gas distribution from clusters to filaments in {IllustrisTNG}},
	url = {http://arxiv.org/abs/2201.00593},
	abstract = {Matter distribution in the environment of galaxy clusters, from their cores to their connected cosmic filaments, must be in principle related to the underlying cluster physics and it evolutionary state. We aim to investigate how radial and azimuthal distribution of gas is affected by cluster environments, and how it can be related to cluster mass assembly history. Radial physical properties of gas (velocity, temperature, and density) is first analysed around 415 galaxy cluster environments from IllustrisTNG simulation at z=0. Whereas hot plasma is virialised inside clusters ({\textless} R200), the dynamics of warm hot inter-galactic medium (WHIM) can be separated in two regimes: accumulating and slowly infalling gas at cluster peripheries ({\textasciitilde} R200) and fast infalling motions outside clusters ({\textgreater} 1.5 R200). The azimuthal distribution of dark matter (DM), hot and warm gas phases is secondly statistically probed by decomposing their 2-D distribution in harmonic space. Inside clusters, the azimuthal symmetries of DM and hot gas are well tracing cluster structural properties, such as their center offsets, substructure fractions and elliptical shapes. Beyond cluster virialised regions, we found that WHIM gas follows the azimuthal distribution of DM by tracing cosmic filament patterns. Azimuthal symmetries of hot and warm gas distribution is finally shown to be imprints of cluster mass assembly history, by strongly correlating with the formation time, mass accretion rate, and dynamical state of clusters. Azimuthal mode decomposition of 2-D gas distribution is a promising probe to assess the 3-D physical and dynamical cluster properties up to their connected cosmic filaments.},
	urldate = {2022-01-12},
	journal = {arXiv:2201.00593 [astro-ph]},
	author = {Gouin, C. and Gallo, S. and Aghanim, N.},
	month = jan,
	year = {2022},
	note = {arXiv: 2201.00593},
	keywords = {Astrophysics - Astrophysics of Galaxies, Astrophysics - Cosmology and Nongalactic Astrophysics},
}

