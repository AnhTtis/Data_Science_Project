@article{sereno_thermalisation_2021,
	title = {The thermalisation of massive galaxy clusters},
	volume = {507},
	issn = {0035-8711, 1365-2966},
	url = {http://arxiv.org/abs/2109.06199},
	doi = {10.1093/mnras/stab2435},
	abstract = {In the hierarchical scenario of structure formation, galaxy clusters are the ultimate virialised products in mass and time. Hot baryons in the intracluster medium (ICM) and cold baryons in galaxies inhabit a dark matter dominated halo. Internal processes, accretion, and mergers can perturb the equilibrium, which is established only at later times. However, the cosmic time when thermalisation is effective is still to be assessed. Here we show that massive clusters in the observed universe attained an advanced thermal equilibrium \${\textbackslash}sim{\textasciitilde}1.8{\textasciitilde}{\textbackslash}text\{Gyr\}\$ ago, at redshift \$z =0.14{\textbackslash}pm0.06\$, when the universe was \$11.7{\textbackslash}pm0.7{\textasciitilde}{\textbackslash}text\{Gyr\}\$ old. Hot gas is mostly thermalised after the time when cosmic densities of matter and dark energy match. We find in a statistically nearly complete and homogeneous sample of 120 clusters from the \{{\textbackslash}it Planck\} Early Sunyaev-Zel'dovich (ESZ) sample that the kinetic energy traced by the galaxy velocity dispersion is a faithful probe of the gravitational energy since a look back time of at least \${\textbackslash}sim5.4{\textasciitilde}{\textbackslash}text\{Gyr\}\$, whereas the efficiency of hot gas in converting kinetic to thermal energy, as measured through X-ray observations in the core-excised area within \$r\_\{500\}\$, steadily increases with time. The evolution is detected at the \${\textbackslash}sim 98\$ per cent probability level. Our results demonstrate that halo mass accretion history plays a larger role for cluster thermal equilibrium than radiative physics. The evolution of hot gas is strictly connected to the cosmic structure formation.},
	number = {4},
	urldate = {2021-11-09},
	journal = {Monthly Notices of the Royal Astronomical Society},
	author = {Sereno, Mauro and Lovisari, Lorenzo and Cui, Weiguang and Schellenberger, Gerrit},
	month = sep,
	year = {2021},
	note = {arXiv: 2109.06199},
	keywords = {Astrophysics - Cosmology and Nongalactic Astrophysics},
	pages = {5214--5223},
}

@article{steinwandel_small_2021,
	title = {On the small scale turbulent dynamo in the intracluster medium: {A} comparison to dynamo theory},
	shorttitle = {On the small scale turbulent dynamo in the intracluster medium},
	url = {http://arxiv.org/abs/2108.07822},
	abstract = {We present non-radiative, cosmological zoom-simulations of galaxy cluster formation with magnetic fields and (anisotropic) thermal conduction of one very massive galaxy cluster with a mass at redshift zero that corresponds to \$M\_{\textbackslash}mathrm\{vir\} {\textbackslash}sim 2 {\textbackslash}times 10{\textasciicircum}\{15\} M\_\{{\textbackslash}odot\}\$. We run the cluster on three resolution levels (1X, 10X, 25X), starting with an effective mass resolution of \$2 {\textbackslash}times 10{\textasciicircum}8M\_\{{\textbackslash}odot\}\$, subsequently increasing the particle number to reach \$4 {\textbackslash}times 10{\textasciicircum}6M\_\{{\textbackslash}odot\}\$. The maximum spatial resolution obtained in the simulations is limited by the gravitational softening reaching \${\textbackslash}epsilon=1.0\$ kpc at the highest resolution level, allowing to resolve the hierarchical assembly of the structures in very fine detail. All simulations presented, have been carried out with the SPMHD-code Gadget-3 with a heavily updated SPMHD prescription. The primary focus is to investigate magnetic field amplification in the Intracluster Medium (ICM). We show that the main amplification mechanism is the small scale-turbulent-dynamo in the limit of reconnection diffusion. In our two highest resolution models we start to resolve the magnetic field amplification driven by this process and we explicitly quantify this with the magnetic power-spectra and the magnetic tension that limits the bending of the magnetic field lines consistent with dynamo theory. Furthermore, we investigate the \${\textbackslash}nabla {\textbackslash}cdot {\textbackslash}mathbf\{B\}=0\$ constraint within our simulations and show that we achieve comparable results to state-of-the-art AMR or moving-mesh techniques, used in codes such as Enzo and Arepo. Our results show for the first time in a fully cosmological simulation of a galaxy cluster that dynamo action can be resolved in the framework of a modern Lagrangian magnetohydrodynamic (MHD) method, a study that is currently missing in the literature.},
	urldate = {2021-11-08},
	journal = {arXiv:2108.07822 [astro-ph]},
	author = {Steinwandel, Ulrich P. and Boess, Ludwig M. and Dolag, Klaus and Lesch, Harald},
	month = aug,
	year = {2021},
	note = {arXiv: 2108.07822},
	keywords = {Astrophysics - Astrophysics of Galaxies, Astrophysics - Cosmology and Nongalactic Astrophysics},
}

