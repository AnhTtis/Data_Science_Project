@article{jimenez-teja_relics_2021,
	title = {{RELICS}: {ICL} {Analysis} of the \$z=0.566\$ merging cluster {WHL} {J013719}.8-08284},
	shorttitle = {{RELICS}},
	url = {http://arxiv.org/abs/2109.04485},
	abstract = {We present a pilot study of the intracluster light (ICL) in massive clusters using imaging of the \$z=0.566\$ cluster of galaxies WHL J013719.8-08284 observed by the RELICS project with the HST. We measure the ICL fraction in four optical ACS/WFC filters (F435W, F475W, F606W, and F814W) and five infrared WFC3/IR bands (F105W, F110W, F125W, F140W, and F160W). The ICL maps are calculated using the free of a priori assumptions algorithm CICLE, and the cluster membership is estimated from photometric properties. We find optical ICL fractions that range between \${\textbackslash}sim\$6{\textbackslash}\% and 19{\textbackslash}\% in nice agreement with the values found in previous works for merging clusters. We also observe an ICL fraction excess between 3800 {\textbackslash}AA and 4800 {\textbackslash}AA, previously identified as a signature of merging clusters at \$0.18{\textless}z{\textless}0.55\$. This excess suggests the presence of an enhanced population of young/low-metallicity stars in the ICL. All indicators thus point to WHL J013719.8-08284 as a disturbed cluster with a significant amount of recently injected stars, bluer than the average stars hosted by the cluster members and likely stripped out from infalling galaxies during the current merging event. Infrared ICL fractions are \${\textbackslash}sim\$50{\textbackslash}\% higher than the optical ones, which could be signature of an older and/or higher-metallicity ICL population that can be associated with the build-up of the BCG, the passive evolution of young stars, previously injected, or preprocessing in infalling groups. Finally, investigating the photometry of the cluster members, we tentatively conclude that WHL J013719.8-08284 fulfills the expected conditions for a fossil system progenitor.},
	urldate = {2021-12-02},
	journal = {arXiv:2109.04485 [astro-ph]},
	author = {Jiménez-Teja, Yolanda and Vílchez, Jose M. and Dupke, Renato A. and Lopes, Paulo A. A. and de Oliveira, Nícolas O. L. and Coe, Dan},
	month = sep,
	year = {2021},
