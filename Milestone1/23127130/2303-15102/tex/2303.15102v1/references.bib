	issn = {0035-8711, 1365-2966},
	url = {http://arxiv.org/abs/2108.12051},
	doi = {10.1093/mnras/stab2430},
	abstract = {We present the analysis of deep X-ray observations of 10 massive galaxy clusters at redshifts \$1.05 {\textless} z {\textless} 1.71\$, with the primary goal of measuring the metallicity of the intracluster medium (ICM) at intermediate radii, to better constrain models of the metal enrichment of the intergalactic medium. The targets were selected from X-ray and Sunyaev-Zel'dovich (SZ) effect surveys, and observed with both the {\textbackslash}textit\{XMM-Newton\} and {\textbackslash}textit\{Chandra\} satellites. For each cluster, a precise gas mass profile was extracted, from which the value of \$r\_\{500\}\$ could be estimated. This allows us to define consistent radial ranges over which the metallicity measurements can be compared. In general, the data are of sufficient quality to extract meaningful metallicity measurements in two radial bins, \$r{\textless}0.3r\_\{500\}\$ and \$0.3{\textless}r/r\_\{500\}{\textless}1.0\$. For the outer bin, the combined measurement for all ten clusters, \$Z/Z\_\{{\textbackslash}odot\} = 0.21 {\textbackslash}pm 0.09\$, represents a substantial improvement in precision over previous results. This measurement is consistent with, but slightly lower than, the average metallicity of 0.315 Solar measured at intermediate-to-large radii in low-redshift clusters. Combining our new high-redshift data with the previous low-redshift results allows us to place the tightest constraints to date on models of the evolution of cluster metallicity at intermediate radii. Adopting a power law model of the form \$Z {\textbackslash}propto {\textbackslash}left(1+z{\textbackslash}right){\textasciicircum}{\textbackslash}gamma\$, we measure a slope \${\textbackslash}gamma = -0.5{\textasciicircum}\{+0.4\}\_\{-0.3\}\$, consistent with the majority of the enrichment of the ICM having occurred at very early times and before massive clusters formed, but leaving open the possibility that some additional enrichment in these regions may have occurred since a redshift of 2.},
	number = {4},
	urldate = {2021-11-24},
	journal = {Monthly Notices of the Royal Astronomical Society},
	author = {Flores, Anthony M. and Mantz, Adam B. and Allen, Steven W. and Morris, R. Glenn and Canning, Rebecca E. A. and Bleem, Lindsey E. and Calzadilla, Michael S. and Floyd, Benjamin T. and McDonald, Michael and Ruppin, Florian},
	month = sep,
	year = {2021},
	note = {arXiv: 2108.12051},
	keywords = {Astrophysics - Cosmology and Nongalactic Astrophysics},
	pages = {5195--5204},
}

@article{dalal_brightest_2021,
	title = {Brightest {Cluster} {Galaxies} {Are} {Statistically} {Special} {From} \$z=0.3\$ to \$z=1\$},
	volume = {507},
	issn = {0035-8711, 1365-2966},
	url = {http://arxiv.org/abs/2108.11288},
	doi = {10.1093/mnras/stab2363},
	abstract = {We study Brightest Cluster Galaxies (BCGs) in \${\textbackslash}sim5000\$ galaxy clusters from the Hyper Suprime-Cam (HSC) Subaru Strategic Program. The sample is selected over an area of 830 \${\textbackslash}textrm\{deg\}{\textasciicircum}2\$ and is uniformly distributed in redshift over the range \$z=0.3-1.0\$. The clusters have stellar masses in the range \$10{\textasciicircum}\{11.8\} - 10{\textasciicircum}\{12.9\} M\_\{{\textbackslash}odot\}\$. We compare the stellar mass of the BCGs in each cluster to what we would expect if their masses were drawn from the mass distribution of the other member galaxies of the clusters. The BCGs are found to be "special", in the sense that they are not consistent with being a statistical extreme of the mass distribution of other cluster galaxies. This result is robust over the full range of cluster stellar masses and redshifts in the sample, indicating that BCGs are special up to a redshift of \$z=1.0\$. However, BCGs with a large separation from the center of the cluster are found to be consistent with being statistical extremes of the cluster member mass distribution. We discuss the implications of these findings for BCG formation scenarios.},
	number = {3},
	urldate = {2021-11-24},
	journal = {Monthly Notices of the Royal Astronomical Society},
	author = {Dalal, Roohi and Strauss, Michael A. and Sunayama, Tomomi and Oguri, Masamune and Lin, Yen-Ting and Huang, Song and Park, Youngsoo and Takada, Masahiro},
	month = sep,
