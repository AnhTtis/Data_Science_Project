	journal = {Space Science Reviews},
	author = {Mernier, F. and Biffi, V. and Yamaguchi, H. and Medvedev, P. and Simionescu, A. and Ettori, S. and Werner, N. and Kaastra, J. S. and de Plaa, J. and Gu, L.},
