@article{Sikkema_Buyers_prb_1996,
  title = {Ising-Kondo lattice with transverse field: A possible         \textit{f}      -moment Hamiltonian for ${\mathrm{URu}}_{2}$${\mathrm{Si}}_{2}$},
  author = {Sikkema, A. E. and Buyers, W. J. L. and Affleck, I. and Gan, J.},
