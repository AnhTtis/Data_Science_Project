@article{Aleiner_Wingreen_prl_1997,
  title = {Dephasing and the Orthogonality Catastrophe in Tunneling through a Quantum Dot: The ``Which Path?'' Interferometer},
  author = {Aleiner, I. L. and Wingreen, Ned S. and Meir, Yigal},
  journal = {Phys. Rev. Lett.},
