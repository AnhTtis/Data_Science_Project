@article{Mullegge_Rauls_prb_2015,
  title = {Mechanism for nuclear and electron spin excitation by radio frequency current},
  author = {M{\"u}llegger, Stefan and Rauls, Eva and Gerstmann, Uwe and Tebi, Stefano and Serrano, Giulia and Wiespointner-Baumgarthuber, Stefan and Schmidt, Wolf Gero and Koch, Reinhold},
  journal = {Phys. Rev. B},
  volume = {92},
