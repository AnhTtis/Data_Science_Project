@article{Mazurenko_Iskakov_prb_2013,
  title = {Correlation effects in insulating surface nanostructures},
  author = {Mazurenko, V. V. and Iskakov, S. N. and Rudenko, A. N. and Kashin, I. V. and Sotnikov, O. M. and Valentyuk, M. V. and Lichtenstein, A. I.},
