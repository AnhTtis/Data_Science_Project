@article{Wolf_C_and_Delgado_F_2020,
author = {Wolf, Christoph and Delgado, Fernando and Reina, Jos\'e and Lorente, Nicolás},
title = {Efficient Ab Initio Multiplet Calculations for Magnetic Adatoms on MgO},
journal = {The Journal of Physical Chemistry A},
volume = {124},
