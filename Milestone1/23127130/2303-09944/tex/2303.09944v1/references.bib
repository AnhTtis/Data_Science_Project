@article{Stipe_Rezaei_science_1998,
author = {Stipe, B. C. and Rezaei, M. A. and Ho, W.},
title = {Single-Molecule Vibrational Spectroscopy and Microscopy},
journal = {Science},
volume = {280},
number = {5370},
