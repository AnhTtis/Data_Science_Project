file = {:Users/arnofoerster/Documents/Mendeley Desktop/Goerigk, Sharma/Canadian Journal of Chemistry/Goerigk, Sharma{\_}2016{\_}The INV24 test set How well do quantum-chemical methods describe inversion and racemization barriers.pdf:pdf},
issn = {00084042},
journal = {Can. J. Chem.},
keywords = {Barrier heights,Benchmarking,Chemical inversion,Density functional theory,Racemization barriers,Wave-function theory},
number = {12},
pages = {1133--1143},
title = {{The INV24 test set: How well do quantum-chemical methods describe inversion and racemization barriers?}},
