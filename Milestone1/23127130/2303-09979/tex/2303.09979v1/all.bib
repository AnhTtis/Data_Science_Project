issn = {10980121},
journal = {Phys. Rev. B - Condens. Matter Mater. Phys.},
number = {24},
pages = {245115},
title = {{Electronic structure of dye-sensitized TiO 2 clusters from many-body perturbation theory}},
volume = {84},
year = {2011}
}
