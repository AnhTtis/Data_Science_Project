issn = {15499626},
journal = {J. Chem. Theory Comput.},
number = {10},
pages = {4605--4610},
title = {{Stochastic Formulation of the Resolution of Identity: Application to Second Order M{\o}ller-Plesset Perturbation Theory}},
volume = {13},
year = {2017}
}
