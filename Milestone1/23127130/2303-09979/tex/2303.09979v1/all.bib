issn = {10895639},
journal = {J. Phys. Chem. A},
number = {46},
pages = {9887--9897},
title = {{Tensor contraction engine: Abstraction and automated parallel implementation of configuration-interaction, coupled-cluster, and many-body perturbation theories}},
