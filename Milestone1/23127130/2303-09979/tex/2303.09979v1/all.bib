doi = {10.1021/jacs.0c08526},
file = {:Users/arnofoerster/Documents/Mendeley Desktop/Sirohiwal, Neese, Pantazis/Journal of the American Chemical Society/Sirohiwal, Neese, Pantazis{\_}2020{\_}Protein Matrix Control of Reaction Center Excitation in Photosystem II.pdf:pdf},
issn = {15205126},
journal = {J. Am. Chem. Soc.},
number = {42},
pages = {18174--18190},
pmid = {33034453},
title = {{Protein Matrix Control of Reaction Center Excitation in Photosystem II}},
volume = {142},
year = {2020}
}
