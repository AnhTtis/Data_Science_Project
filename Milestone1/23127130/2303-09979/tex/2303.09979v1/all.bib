booktitle = {J. Chem. Phys.},
doi = {10.1063/5.0016472},
file = {:Users/arnofoerster/Documents/Mendeley Desktop/Ortiz/Journal of Chemical Physics/Ortiz{\_}2020{\_}Dyson-orbital concepts for description of electrons in molecules.pdf:pdf},
