doi = {10.1063/1.1858411},
file = {:Users/arnofoerster/Documents/Mendeley Desktop/Neugebauer et al/Journal of Chemical Physics/Neugebauer et al.{\_}2005{\_}The merits of the frozen-density embedding scheme to model solvatochromic shifts.pdf:pdf},
issn = {00219606},
journal = {J. Chem. Phys.},
number = {9},
