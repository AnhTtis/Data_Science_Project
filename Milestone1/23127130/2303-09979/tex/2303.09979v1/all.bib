doi = {10.1103/PhysRevB.85.125307},
file = {:Users/arnofoerster/Documents/Mendeley Desktop/Sharifzadeh et al/Physical Review B - Condensed Matter and Materials Physics/Sharifzadeh et al.{\_}2012{\_}Quasiparticle and optical spectroscopy of the organic semiconductors pentacene and PTCDA from first principles.pdf:pdf},
issn = {10980121},
journal = {Phys. Rev. B - Condens. Matter Mater. Phys.},
number = {12},
pages = {1--11},
title = {{Quasiparticle and optical spectroscopy of the organic semiconductors pentacene and PTCDA from first principles}},
volume = {85},
year = {2012}
}
