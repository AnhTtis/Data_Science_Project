doi = {10.1039/c003951a},
file = {:Users/arnofoerster/Documents/Mendeley Desktop/Huenerbein et al/Physical Chemistry Chemical Physics/Huenerbein et al.{\_}2010{\_}Effects of London dispersion on the isomerization reactions of large organic molecules A density functional bench.pdf:pdf},
