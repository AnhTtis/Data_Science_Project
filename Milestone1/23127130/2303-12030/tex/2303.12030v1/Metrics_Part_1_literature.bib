@article{pairetSTIMMapDetection2019,
  title = {{{STIM}} Map: Detection Map for Exoplanets Imaging beyond Asymptotic {{Gaussian}} Residual Speckle Noise},
  shorttitle = {{{STIM}} Map},
  author = {Pairet, Beno{\^i}t and Cantalloube, Faustine and Gomez~Gonzalez, Carlos A and Absil, Olivier and Jacques, Laurent},
