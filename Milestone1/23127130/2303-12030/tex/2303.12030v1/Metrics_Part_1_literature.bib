@article{perrinStructureHighStrehl2003,
  title = {The {{Structure}} of {{High Strehl Ratio Point-Spread Functions}}},
  author = {Perrin, Marshall D. and Sivaramakrishnan, Anand and Makidon, Russell B. and Oppenheimer, Ben R. and Graham, James R.},
