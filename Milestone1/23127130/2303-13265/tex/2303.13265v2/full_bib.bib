@Article{Trofymchuk2021,
  author   = {Trofymchuk, Kateryna and Glembockyte, Viktorija and Grabenhorst, Lennart and Steiner, Florian and Vietz, Carolin and Close, Cindy and Pfeiffer, Martina and Richter, Lars and Sch{\"u}tte, Max L. and Selbach, Florian and Yaadav, Renukka and Z{\"a}hringer, Jonas and Wei, Qingshan and Ozcan, Aydogan and Lalkens, Birka and Acuna, Guillermo P. and Tinnefeld, Philip},
