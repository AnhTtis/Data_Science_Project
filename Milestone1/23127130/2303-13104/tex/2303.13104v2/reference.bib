@Article{Jin2023,
  author   = {Peng Jin and Jinrong Liu and Liujun Xu and Jun Wang and Xiaoping Ouyang and Jian-Hua Jiang and Jiping Huang},
  journal  = {Proc. Natl. Acad. Sci.},
  title    = {Tunable liquid–solid hybrid thermal metamaterials with a topology transition},
