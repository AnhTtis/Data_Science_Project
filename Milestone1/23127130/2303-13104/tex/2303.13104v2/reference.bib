@Article{Gupta2020,
  author   = {Gupta, Samit Kumar and Zou, Yi and Zhu, Xue-Yi and Lu, Ming-Hui and Zhang, Li-Jian and Liu, Xiao-Ping and Chen, Yan-Feng},
