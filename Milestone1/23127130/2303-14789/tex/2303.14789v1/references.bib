@article{pingree_1995,
title = {Structure, seasonal development and sunglint spatial coherence of the internal tide on the Celtic and Armorican shelves and in the Bay of Biscay},
journal = {Deep Sea Res. Part I Oceanogr. Res. Pap.},
volume = {42},
number = {2},
