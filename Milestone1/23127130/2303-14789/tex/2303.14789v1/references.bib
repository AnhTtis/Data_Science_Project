@Article{legg_2017_dissipation_generation,
AUTHOR = {Yi, Young R. and Legg, S. and Nazarian, R.H.},
TITLE = {The Impact of Topographic Steepness on Tidal Dissipation at Bumpy Topography},
JOURNAL = {Fluids},
