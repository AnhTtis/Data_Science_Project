	date-added = {2022-07-14 18:27:32 -0600},
	date-modified = {2022-07-14 18:28:34 -0600},
	doi = {10.1086/338765},
	journal = {\apj},
	month = {mar},
	number = {1},
	pages = {52--70},
	publisher = {American Astronomical Society},
	title = {Concentrations of Dark Halos from Their Assembly Histories},
	url = {https://doi.org/10.1086/338765},
	volume = {568},
	year = 2002,
	bdsk-url-1 = {https://doi.org/10.1086/338765}}

