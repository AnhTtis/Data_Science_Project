	eprint = {astro-ph/0611454},
	journal = {IJMPD},
	keywords = {Dark matter, large-scale structure of the universe, galaxy formation, statistics},
	pages = {763-815},
	title = {{The Excursion Set Theory of Halo Mass Functions, Halo Clustering, and Halo Growth}},
