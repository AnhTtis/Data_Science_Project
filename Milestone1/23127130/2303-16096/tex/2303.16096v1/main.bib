	archiveprefix = {arXiv},
	author = {{Lacerna}, I. and {Padilla}, N.},
	date-added = {2020-04-09 13:01:52 -0700},
	date-modified = {2020-04-09 13:01:52 -0700},
	doi = {10.1111/j.1745-3933.2012.01316.x},
	eprint = {1207.4476},
	journal = {\mnras},
	keywords = {cosmology:\ theory, dark matter, large-scale structure of the universe},
	month = oct,
	pages = {L26-L30},
	primaryclass = {astro-ph.CO},
	title = {{The nature of assembly bias -- II.\ Halo spin}},
