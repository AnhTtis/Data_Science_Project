	journal = {\araa},
	number = {1},
	pages = {435-487},
	title = {The Connection Between Galaxies and Their Dark Matter Halos},
	url = {https://doi.org/10.1146/annurev-astro-081817-051756},
	volume = {56},
	year = {2018},
	bdsk-url-1 = {https://doi.org/10.1146/annurev-astro-081817-051756}}

