	doi = {10.1088/0004-637x/785/2/104},
	journal = {\apj},
	month = {apr},
	number = {2},
	pages = {104},
	publisher = {American Astronomical Society},
	title = {{redMaPPer}. I. {ALGORITHM} {AND} {SDSS} {DR}8 {CATALOG}},
	url = {https://doi.org/10.1088/0004-637x/785/2/104},
