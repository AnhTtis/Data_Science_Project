   issue = {9},
   journal = {Physics of Fluids},
   month = {9},
   pages = {096603},
   publisher = {American Institute of Physics Inc.},
   title = {Bragg scattering of long waves by an array of floating flexible plates in the presence of multiple submerged trenches},
   volume = {32},
