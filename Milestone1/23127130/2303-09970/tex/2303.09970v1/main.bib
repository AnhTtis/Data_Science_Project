@article{Kahmann_purity,
author = {Kahmann, Simon and Shao, Shuyan and Loi, Maria A.},
title = {Cooling, Scattering, and Recombination—The Role of the Material Quality for the Physics of Tin Halide Perovskites},
journal = {Advanced Functional Materials},
volume = {29},
