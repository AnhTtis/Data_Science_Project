@Article{GaAs-freq,
author ="Handa, Taketo and Yamada, Takumi and Nagai, Masaya and Kanemitsu, Yoshihiko",
title  ="Phonon{,} thermal{,} and thermo-optical properties of halide perovskites",
journal  ="Physical Chemistry Chemical Physics",
