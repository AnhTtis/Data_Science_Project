}
@article{Eisert.2022, 
year = {2022}, 
title = {{ERGO-ML I: inferring the assembly histories of IllustrisTNG galaxies from integral observable properties via invertible neural networks}}, 
author = {Eisert, Lukas and Pillepich, Annalisa and Nelson, Dylan and Klessen, Ralf S and Huertas-Company, Marc and Rodriguez-Gomez, Vicente}, 
