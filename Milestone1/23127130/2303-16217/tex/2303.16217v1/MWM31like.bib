@article{Fantin.2019, 
year = {2019}, 
title = {{The Canada–France Imaging Survey: Reconstructing the Milky Way Star Formation History from Its White Dwarf Population}}, 
author = {Fantin, Nicholas J. and Côté, Patrick and McConnachie, Alan W. and Bergeron, Pierre and Cuillandre, Jean-Charles and Gwyn, Stephen D. J. and Ibata, Rodrigo A. and Thomas, Guillaume F. and Carlberg, Raymond G. and Fabbro, Sébastien and Haywood, Misha and Lançon, Ariane and Lewis, Geraint F. and Malhan, Khyati and Martin, Nicolas F. and Navarro, Julio F. and Scott, Douglas and Starkenburg, Else}, 
