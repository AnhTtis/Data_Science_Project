@article{wibergTimeTemporalityHCI2021,
  title = {Time and {{Temporality}} in {{HCI Research}}},
  author = {Wiberg, Mikael and Stolterman, Erik},
  year = {2021},
  month = may,
  journal = {Interacting with Computers},
  volume = {33},
