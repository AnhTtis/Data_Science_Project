@article{kuijerDemocratisingAnticipatingEveryday2020,
  ids = {kuijerDemocratisingAnticipatingEveryday2020a},
  title = {Democratising and {{Anticipating Everyday Futures Through Critical Design}}: {{A Review}} of {{Exemplars}}},
