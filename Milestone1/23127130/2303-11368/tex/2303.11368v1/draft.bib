  author = {Shankar, Francesco and Bernardi, Mariangela and Sheth, Ravi K. and Ferrarese, Laura and Graham, Alister W. and Savorgnan, Giulia and Allevato, Viola and Marconi, Alessandro and L{\"a}sker, Ronald and Lapi, Andrea},
