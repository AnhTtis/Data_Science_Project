pages = {5032--5051},
volume = {7},
number = {8},
year = {2016},
title = {MN15: A KohnSham global-hybrid exchangecorrelation density functional with broad accuracy for multi-reference and single-reference systems and noncovalent interactions},
author = {Yu, Haoyu S. and He, Xiao and Li, Shaohong L. and Truhlar, Donald G.},
keywords = {Organic Semiconductors ; Organic Chemistry ; Functionals ; Density ; Semiconductors ; Excitation ; Electronics ; Parametrization ; Chemical and Electrochemical Properties (MD) ; Chemical and Electrochemical Properties (Ep) ; Chemical and Electrochemical Properties (Ed) ; Chemical and Electrochemical Properties (EC);},
