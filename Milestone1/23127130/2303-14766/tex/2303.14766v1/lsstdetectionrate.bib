	urldate = {2022-10-27},
	journal = {Icarus},
	author = {Kubica, Jeremy and Denneau, Larry and Grav, Tommy and Heasley, James and Jedicke, Robert and Masiero, Joseph and Milani, Andrea and Moore, Andrew and Tholen, David and Wainscoat, Richard J.},
	month = jul,
	year = {2007},
	keywords = {Asteroids},
	pages = {151--168},
	file = {ScienceDirect Full Text PDF:/Users/carsonezell/Zotero/storage/WCQX3CFJ/Kubica et al. - 2007 - Efficient intra- and inter-night linking of astero.pdf:application/pdf;ScienceDirect Snapshot:/Users/carsonezell/Zotero/storage/HUPTN7BH/S0019103507000528.html:text/html},
