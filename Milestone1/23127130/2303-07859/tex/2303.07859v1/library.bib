issn = {14604744},
journal = {Chemical Society Reviews},
number = {11},
pages = {3788--3803},
title = {{Self-assembled materials and supramolecular chemistry within microfluidic environments: From common thermodynamic states to non-equilibrium structures}},
volume = {47},
year = {2018}
}
@article{Arango-Restrepo2019,
