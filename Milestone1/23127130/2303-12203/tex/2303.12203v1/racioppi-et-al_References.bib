file = {:C\:/Users/stefa/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Sans et al. - 2016 - Ordered helium trapping and bonding in compressed arsenolite Synthesis of A s4 O6{\textperiodcentered}2He ORDERED HELIUM TRAPPING and B.pdf:pdf},
issn = {24699969},
journal = {Phys. Rev. B},
