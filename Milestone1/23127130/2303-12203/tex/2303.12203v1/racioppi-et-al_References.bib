file = {:C\:/Users/stefa/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Yagi et al. - 2007 - High-pressure behavior of a Si O2 clathrate observed by using various pressure media.pdf:pdf},
issn = {10980121},
journal = {Phys. Rev. B Condens. Matter Mater. Phys.},
number = {},
pages = {174115},
title = {{High-pressure Behavior of a SiO$_2$ Clathrate Observed by Using Various Pressure Media}},
volume = {75},
year = {2007}
}

