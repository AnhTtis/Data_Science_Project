@ARTICLE{Vayner2021-hy,
  title         = "Multi-phase outflows in high redshift quasar host galaxies",
  author        = "Vayner, Andrey and Zakamska, Nadia and Wright, Shelley A and
                   Armus, Lee and Murray, Norman and Walth, Gregory",
  abstract      = "We present Atacama Large Millimeter/submillimeter Array
