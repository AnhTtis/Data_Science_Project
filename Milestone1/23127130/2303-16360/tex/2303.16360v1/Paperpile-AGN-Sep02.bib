@ARTICLE{Ishibashi2018-ow,
  title         = "The energetics of {AGN} radiation pressure-driven outflows",
  author        = "Ishibashi, W and Fabian, A C and Maiolino, R",
  abstract      = "The increasing observational evidence of galactic outflows
                   is considered as a sign of active galactic nucleus (AGN)
                   feedback in action. However, the physical mechanism
                   responsible for driving the observed outflows remains
                   unclear, and whether it is due to momentum, energy, or
