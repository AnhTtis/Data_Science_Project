@ARTICLE{Veilleux2020-ol,
  title         = "Cool Outflows in Galaxies and their Implications",
  author        = "Veilleux, Sylvain and Maiolino, Roberto and Bolatto, Alberto
                   D and Aalto, Susanne",
  abstract      = "Neutral-atomic and molecular outflows are a common
                   occurrence in galaxies, near and far. They operate over the
