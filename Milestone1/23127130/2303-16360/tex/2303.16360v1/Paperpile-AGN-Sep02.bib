@ARTICLE{Held2022-qp,
  title         = "{MRI} turbulence in accretion discs at large magnetic
                   Prandtl numbers",
  author        = "Held, Loren E and Mamatsashvili, George",
  abstract      = "The effect of large magnetic Prandtl number Pm (the ratio of
                   viscosity to resistivity) on the turbulent transport and
