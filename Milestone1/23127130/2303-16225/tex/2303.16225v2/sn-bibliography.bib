	journaltitle = {Publications of the Astronomical Society of Japan},
	author = {Izumi, Takuma and Onoue, Masafusa and Matsuoka, Yoshiki and Nagao, Tohru and Strauss, Michael A. and Imanishi, Masatoshi and Kashikawa, Nobunari and Fujimoto, Seiji and Kohno, Kotaro and Toba, Yoshiki and Umehata, Hideki and Goto, Tomotsugu and Ueda, Yoshihiro and Shirakata, Hikari and Silverman, John D. and Greene, Jenny E. and Harikane, Yuichi and Hashimoto, Yasuhiro and Ikarashi, Soh and Iono, Daisuke and Iwasawa, Kazushi and Lee, Chien-Hsiu and Minezaki, Takeo and Nakanishi, Kouichiro and Tamura, Yoichi and Tang, Ji-Jia and Taniguchi, Akio},
