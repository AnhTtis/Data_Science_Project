	note = {{ADS} Bibcode: 2022MNRAS.509.3015H},
	keywords = {Astrophysics - Astrophysics of Galaxies, galaxies: evolution, galaxies: formation, methods: numerical, black hole physics},
	file = {Full Text:/Users/maiolino/Zotero/storage/ABD2YZY3/Habouzit et al. - 2022 - Supermassive black holes in cosmological simulatio.pdf:application/pdf},
