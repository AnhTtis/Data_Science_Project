@article{mordini_galaxy_2022,
	title = {Galaxy evolution through infrared and submillimetre spectroscopy: Measuring star formation and black hole accretion with {JWST} and {ALMA}},
	volume = {39},
	issn = {1323-3580},
	url = {https://ui.adsabs.harvard.edu/abs/2022PASA...39...12M},
	doi = {10.1017/pasa.2022.10},
	shorttitle = {Galaxy evolution through infrared and submillimetre spectroscopy},
	abstract = {Rest-frame mid- to far-infrared ({IR}) spectroscopy is a powerful tool to study how galaxies formed and evolved, because a major part of their evolution occurs in heavily dust enshrouded environments, especially at the so-called Cosmic Noon ( \$1{\textless} z {\textless} 3\$ ). Using the calibrations of {IR} lines and features, recently updated with Herschel and Spitzer spectroscopy, we predict their expected fluxes with the aim to measure the Star Formation ({SF}) and the Black Hole Accretion ({BHA}) rates in intermediate to high redshift galaxies. On the one hand, the recent launch of the James Webb Space Telescope ({JWST}) offers new mid-{IR} spectroscopic capabilities that will enable for the first time a detailed investigation of both the {SF} and the {BHA} obscured processes as a function of cosmic time. We make an assessment of the spectral lines and features that can be detected by {JWST}-{MIRI} in galaxies and active galactic nuclei up to redshift \$z  3\$ . The fine structure lines of [{MgIV}]4.49 \${\textbackslash}unicode\{x03BC\}{\textbackslash}textrm\{m\}\$ and [{ArVI}]4.53 \${\textbackslash}unicode\{x03BC\}{\textbackslash}textrm\{m\}\$ can be used as {BHA} rate tracers for the \$1 {\textbackslash}lesssim z {\textbackslash}lesssim 3\$ range, and we propose the [{NeVI}]7.65 \${\textbackslash}unicode\{x03BC\}{\textbackslash}textrm\{m\}\$ line as the best tracer for \$z {\textbackslash}lesssim 1.5\$ . The [{ArII}]6.98 \${\textbackslash}unicode\{x03BC\}{\textbackslash}textrm\{m\}\$ and [{ArIII}]8.99 \${\textbackslash}unicode\{x03BC\}{\textbackslash}textrm\{m\}\$ lines can be used to measure the {SF} rate at \$z {\textbackslash}lesssim 3\$ and \$z {\textbackslash}lesssim 2\$ , respectively, while the stronger [{NeII}]12.8 \${\textbackslash}unicode\{x03BC\}{\textbackslash}textrm\{m\}\$ line exits the {JWST}-{MIRI} spectral range above \$z rsim 1.2\$ . At higher redshifts, the {PAH} features at 6.2 and 7.7 \${\textbackslash}unicode\{x03BC\}{\textbackslash}textrm\{m\}\$ can be observed at \$z {\textbackslash}lesssim 3\$ and \$z {\textbackslash}lesssim 2.7\$ , respectively. On the other hand, rest-frame far-{IR} spectroscopic observations of high redshift galaxies ( \$z rsim 3\$ ) have been collected with the Atacama Large Millimeter Array ({ALMA}) in the last few years. The observability of far-{IR} lines from {ALMA} depends on the observed frequency, due to the significant decrease of the atmospheric transmission at the highest frequencies ( \$rsim420 \{Hz\}\$ ). The [{CII}]158 \${\textbackslash}unicode\{x03BC\}{\textbackslash}textrm\{m\}\$ line is a reliable tracer of the {SF} rate and can in most cases ( \$0.9 {\textbackslash}lesssim z {\textbackslash}lesssim 2\$ and \$2 {\textbackslash}lesssim z {\textbackslash}lesssim 9\$ ) be observed. Additionally, we propose the use of the combination of [{OIII}]88 \$ {\textbackslash}unicode\{x03BC\}\$ m and [{OI}]145 \$ {\textbackslash}unicode\{x03BC\}\$ m lines as an alternative {SF} rate tracer, that can be detected above \$z rsim 3\$ . Overall, we emphasize the importance of using multi-feature analysis to measure both {BHA} and {SFR}, since individual tracers can be strongly dependent on the local {ISM} conditions and vary from source to source. However, we conclude that the peak of the obscured {SF} and {BHA} activities at Cosmic Noon falls outside the wavelength coverage of facilities currently operating or under development. A new {IR} space telescope covering the full {IR} spectral range from about 10 to \$300 {\textbackslash}unicode\{x03BC\}{\textbackslash}textrm\{m\}\$ and actively cooled to achieve high sensitivity, will be needed.},
	pages = {e012},
	journaltitle = {Publications of the Astronomical Society of Australia},
	author = {Mordini, Sabrina and Spinoglio, Luigi and Fernndez-Ontiveros, Juan Antonio},
