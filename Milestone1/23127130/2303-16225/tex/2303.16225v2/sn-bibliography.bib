@article{curti_new_2017,
	title = {New fully empirical calibrations of strong-line metallicity indicators in star-forming galaxies},
	volume = {465},
	issn = {0035-8711},
	url = {https://ui.adsabs.harvard.edu/abs/2017MNRAS.465.1384C},
