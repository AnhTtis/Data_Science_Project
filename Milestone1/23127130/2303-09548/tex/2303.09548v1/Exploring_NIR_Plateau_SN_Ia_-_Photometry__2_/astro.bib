keywords = {cD-supernovae,cosmology,ellip-tical and lenticular,general,observations-distance scale-dark energy-galaxies},
title = {{EARLY-TYPE HOST GALAXIES OF TYPE IA SUPERNOVAE. II. EVIDENCE FOR LUMINOSITY EVOLUTION IN SUPERNOVA COSMOLOGY}},
