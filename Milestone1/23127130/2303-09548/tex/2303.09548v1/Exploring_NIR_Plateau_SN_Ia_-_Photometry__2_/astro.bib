file = {:Users/maximedeckers/Library/Application Support/Mendeley Desktop/Downloaded/Ganeshalingam, Li, Filippenko - 2011 - The rise-time distribution of nearby Type Ia supernovae.pdf:pdf},
journal = {MNRAS},
keywords = {general,supernovae},
