journal = {ApJ},
keywords = {individual (SN 2006gz),white dwarfs-radiative transfer-supernovae},
pages = {1745--1752},
title = {{SUBARU AND KECK OBSERVATIONS OF THE PECULIAR TYPE IA SUPERNOVA 2006GZ AT LATE PHASES *}},
