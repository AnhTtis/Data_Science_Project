file = {:Users/maximedeckers/Library/Application Support/Mendeley Desktop/Downloaded/Dong et al. - 2022 - Physical Properties of the Host Galaxies of Ca-rich Transients.pdf:pdf},
keywords = {galaxies,general-stars,progenitor systems,star formation histories-supernovae},
month = {feb},
title = {{Physical Properties of the Host Galaxies of Ca-rich Transients}},
