keywords = {abundances,nuclear reactions,nucleosynthesis,radiative transfer,supernovae: general},
pages = {78},
title = {{Type Ia Supernovae in the First Few Days: Signatures of Helium Detonation versus Interaction}},
url = {https://doi.org/10.3847/1538-4357/aac8d8},
volume = {861},
year = {2018}
}
