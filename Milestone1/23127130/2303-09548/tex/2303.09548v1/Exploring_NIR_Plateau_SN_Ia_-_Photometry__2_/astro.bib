issn = {0004-637X},
journal = {Astrophysical Journal v.444, p.831},
keywords = {ABUNDANCES,Abundance,Astrophysics,Brightness,Detonation,Equations Of State,HYDRODYNAMICS,Hydrodynamics,Infrared Astronomy,Light Curve,MOLECULAR PROCESSES,Molecular Dynamics,Monte Carlo Method,NUCLEAR REACTIONS,NUCLEOSYNTHESIS,Radiative Transfer,STARS: INTERIORS,STARS: SUPERNOVAE: GENERAL,Stellar Luminosity,Stellar Models,Supernovae},
