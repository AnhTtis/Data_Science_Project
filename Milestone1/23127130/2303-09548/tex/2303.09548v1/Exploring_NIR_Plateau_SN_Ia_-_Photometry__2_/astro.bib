eprint = {1209.0645v3},
file = {:Users/maximedeckers/Library/Application Support/Mendeley Desktop/Downloaded/1⋆ et al. - 2018 - On the brightness distribution of Type Ia supernovae from violent white dwarf mergers.pdf:pdf},
journal = {MNRAS},
keywords = {close-supernovae,general-white dwarfs,hydrodynamics-radiative transfer-methods,numerical-binaries},
