keywords = {iPTF14atg,iPTF14dpk),supernovae: general,supernovae: individual (SN2002es},
title = {{SN2002es-LIKE SUPERNOVAE FROM DIFFERENT VIEWING ANGLES}},
year = {2016}
}
@article{Liu2015,
