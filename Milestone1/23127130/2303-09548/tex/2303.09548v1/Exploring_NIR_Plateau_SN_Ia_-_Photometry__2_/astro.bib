author = {Reindl, N and Schaffenroth, V and {Miller Bertolami}, M M and Geier, S and Finch, N L and Barstow, M A and Casewell, S L and Taubenberger, S},
eprint = {2006.14688v1},
file = {:Users/maximedeckers/Library/Application Support/Mendeley Desktop/Downloaded/Reindl et al. - 2020 - An in-depth reanalysis of the alleged type Ia supernova progenitor Henize 2-428.pdf:pdf},
keywords = {(Stars:) binaries: close,(Stars:) binaries: spectroscopic,ISM: lines and bands,Stars: individual: Hen 2−428},
