keywords = {Subject headingg s: hydrodynamics-nuclear reaction,abundances-supernova remnants-supernovae: general,nucleosynthesis},
title = {{NICKEL BUBBLE EXPANSION IN TYPE Ia SUPERNOVAE: ADIABATIC SOLUTIONS}}
