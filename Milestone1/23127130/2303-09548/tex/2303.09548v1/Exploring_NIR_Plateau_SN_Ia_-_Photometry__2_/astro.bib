file = {:Users/maximedeckers/Library/Application Support/Mendeley Desktop/Downloaded/Groh - 2018 - Early-time spectra of supernovae and their precursor winds the luminous blue variableyellow hypergiant progenitor of SN(2).pdf:pdf},
keywords = {evolution-stars,general-stars,individual (2013cu)-stars,outflows,stars,supernovae,winds},
title = {{Early-time spectra of supernovae and their precursor winds: the luminous blue variable/yellow hypergiant progenitor of SN 2013cu}},
