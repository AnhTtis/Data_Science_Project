keywords = {Wolf-Rayet,atmospheres-stars,evolution-stars,mass-loss-stars,massive-stars,outflows-stars,stars,winds},
pages = {1--22},
title = {{On the nature of massive helium star winds and Wolf-Rayet-type mass loss}},
