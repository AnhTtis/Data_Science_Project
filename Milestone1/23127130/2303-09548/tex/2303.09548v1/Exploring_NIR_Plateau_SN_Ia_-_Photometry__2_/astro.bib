file = {:Users/maximedeckers/Library/Application Support/Mendeley Desktop/Downloaded/Wang, Liu - 2020 - The formation of neutron star systems through accretion-induced collapse in white-dwarf binaries.pdf:pdf},
journal = {Research in Astron. Astrophys},
keywords = {binaries,close-white dwarfs-supernovae,evolution,general-stars,neutron-stars},
pages = {0--000},
title = {{The formation of neutron star systems through accretion-induced collapse in white-dwarf binaries}},
url = {http://www.raa-journal.orghttp//www.iop.org/journals/raa},
