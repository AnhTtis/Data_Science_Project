file = {:Users/maximedeckers/Library/Application Support/Mendeley Desktop/Downloaded/De Jaeger et al. - 2020 - A measurement of the Hubble constant from Type II supernovae.pdf:pdf},
journal = {MNRAS},
keywords = {cosmology,distance scale-galaxies,distances and redshifts-stars,general,supernovae},
pages = {1--11},
title = {{A measurement of the Hubble constant from Type II supernovae}},
url = {http://classic.sdss.org/supernova/aboutsupernova.html},
