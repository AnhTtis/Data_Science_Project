doi = {10.1111/j.1365-2966.2010.18107.x},
file = {:Users/maximedeckers/Library/Application Support/Mendeley Desktop/Downloaded/Taubenberger et al. - 2011 - High luminosity, slow ejecta and persistent carbon lines SN 2009dc challenges thermonuclear explosion scena.pdf:pdf},
