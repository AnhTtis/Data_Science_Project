file = {:Users/maximedeckers/Library/Application Support/Mendeley Desktop/Downloaded/De et al. - 2020 - The peculiar Ca-rich SN 2019ehk Evidence for a Type IIb core-collapse supernova from a low mass stripped progenitor.pdf:pdf},
