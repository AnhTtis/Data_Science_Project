doi = {10.1088/0004-637X/712/1/350},
file = {:Users/maximedeckers/Library/Application Support/Mendeley Desktop/Downloaded/Hayden et al. - 2010 - THE RISE AND FALL OF TYPE Ia SUPERNOVA LIGHT CURVES IN THE SDSS-II SUPERNOVA SURVEY(3).pdf:pdf},
