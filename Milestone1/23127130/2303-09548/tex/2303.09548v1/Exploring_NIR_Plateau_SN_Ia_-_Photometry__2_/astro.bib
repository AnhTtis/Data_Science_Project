eprint = {1912.07603},
file = {:Users/maximedeckers/Library/Application Support/Mendeley Desktop/Downloaded/Magee et al. - 2020 - Determining the 56 Ni distribution of type Ia supernovae from observations within days of explosion.pdf:pdf},
