file = {:Users/maximedeckers/Library/Application Support/Mendeley Desktop/Downloaded/Fink et al. - 2010 - Double-detonation sub-Chandrasekhar supernovae can minimum helium shell masses detonate the core.pdf:pdf},
issn = {0004-6361},
journal = {A\&A},
keywords = {abundances-hydrodynamics-methods: numerical,nucleosynthesis,supernovae: general-nuclear reactions},
month = {may},
pages = {A53},
title = {{Double-detonation sub-Chandrasekhar supernovae: can minimum helium shell masses detonate the core?}},
url = {http://www.aanda.org/10.1051/0004-6361/200913892},
volume = {514},
