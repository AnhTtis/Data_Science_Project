keywords = {methods: numerical,radiative transfer,stars: atmospheres,supernovae: general},
month = {feb},
pages = {A132},
title = {{Near-infrared light curves of type Ia supernovae}},
url = {https://ui.adsabs.harvard.edu/abs/2012A%26A...538A.132J/abstract},
