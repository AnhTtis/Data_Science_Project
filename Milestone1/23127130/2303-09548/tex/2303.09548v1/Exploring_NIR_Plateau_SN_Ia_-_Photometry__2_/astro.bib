pages = {902--924},
title = {{THE POLARIZATION OF SUPERNOVA LIGHT: A MEASURE OF DEVIATION FROM SPHERICAL SYMMETRY}},
volume = {9023},
year = {1982}
}
@article{Scolnic2020,
