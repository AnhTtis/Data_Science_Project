journal = {MNRAS},
keywords = {general,line,profiles-supernovae},
pages = {3254--3265},
title = {{Searching for swept-up hydrogen and helium in the late-time spectra of 11 nearby Type Ia supernovae}},
url = {https://academic.oup.com/mnras/article/457/3/3254/2588883},
volume = {457},
