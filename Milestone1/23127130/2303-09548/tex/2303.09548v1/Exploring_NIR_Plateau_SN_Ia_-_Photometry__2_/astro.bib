file = {:Users/maximedeckers/Library/Application Support/Mendeley Desktop/Downloaded/Kromer et al. - 2010 - DOUBLE-DETONATION SUB-CHANDRASEKHAR SUPERNOVAE SYNTHETIC OBSERVABLES FOR MINIMUM HELIUM SHELL MASS MODELS(2).pdf:pdf},
journal = {ApJ},
keywords = {general,methods,numerical-radiative transfer-supernovae},
pages = {1067--1082},
title = {{DOUBLE-DETONATION SUB-CHANDRASEKHAR SUPERNOVAE: SYNTHETIC OBSERVABLES FOR MINIMUM HELIUM SHELL MASS MODELS}},
