file = {:Users/maximedeckers/Library/Application Support/Mendeley Desktop/Downloaded/Dhawan et al. - 2016 - Astrophysics A reddening-free method to estimate the 56 Ni mass of Type Ia supernovae.pdf:pdf},
journal = {A\&A},
keywords = {2006X-supernovae,2007if,2014J-supernovae,general-supernovae,individual,supernovae},
title = {{Astrophysics A reddening-free method to estimate the 56 Ni mass of Type Ia supernovae}},
volume = {588},
