file = {:Users/maximedeckers/Library/Application Support/Mendeley Desktop/Downloaded/Nicolas et al. - 2020 - Redshift Evolution of the Underlying Type Ia Supernova Stretch Distribution.pdf:pdf},
keywords = {Cosmology-,Ia,Supernova-,Systematic uncertainties,Type},
title = {{Redshift Evolution of the Underlying Type Ia Supernova Stretch Distribution}},
