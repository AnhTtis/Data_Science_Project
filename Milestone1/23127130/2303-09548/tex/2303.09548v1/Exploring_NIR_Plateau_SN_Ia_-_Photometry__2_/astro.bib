arxivId = {2006.13803v1},
author = {Ponder, Kara A and {Michael Wood-Vasey}, W and Weyant, Anja and Barton, Nathan T and Galbany, Llu{\'{i}}s and Garnavich, Peter and Matheson, Thomas},
eprint = {2006.13803v1},
file = {:Users/maximedeckers/Library/Application Support/Mendeley Desktop/Downloaded/Ponder et al. - 2020 - Are Type Ia Supernovae in Restframe H Brighter in More Massive Galaxies.pdf:pdf},
keywords = {cosmology,dark energy,general,supernova},
title = {{Are Type Ia Supernovae in Restframe H Brighter in More Massive Galaxies?}},
year = {2020}
