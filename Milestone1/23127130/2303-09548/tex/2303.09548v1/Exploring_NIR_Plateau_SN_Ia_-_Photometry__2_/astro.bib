journal = {MNRAS},
keywords = {SN 1991bg-supernovae,SN 1999by,general-supernovae,individual,radiation mechanisms,thermal-supernovae},
pages = {2926--2935},
title = {{The nebular spectra of the Type Ia supernova 1991bg: further evidence of a non-standard explosion}},
