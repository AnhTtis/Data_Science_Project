file = {:Users/maximedeckers/Library/Application Support/Mendeley Desktop/Downloaded/Burns et al. - 2011 - THE CARNEGIE SUPERNOVA PROJECT LIGHT-CURVE FITTING WITH SNooPy.pdf:pdf},
journal = {AJ},
keywords = {cosmology,general-techniques,miscellaneous,observations-distance scale-supernovae},
pages = {19},
title = {{THE CARNEGIE SUPERNOVA PROJECT: LIGHT-CURVE FITTING WITH SNooPy}},
url = {http://www.obs.carnegiescience.edu/CSP.},
volume = {141},
year = {2011}
